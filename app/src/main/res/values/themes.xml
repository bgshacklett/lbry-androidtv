<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.LbryTv" parent="@style/Theme.Leanback">
        <item name="defaultBrandColor">@color/brandColor</item>
        <item name="defaultBrandColorDark">@color/brandColorDark</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="searchOrbViewStyle">@style/SearchOrbViewStyle</item>
        <item name="imageCardViewStyle">@style/StreamCardViewStyle</item>
        <item name="imageCardViewImageStyle">@style/StreamCardImageStyle</item>
        <item name="browseTitleViewLayout">@layout/lbc_title_view</item>
        <item name="headersVerticalGridStyle">@style/HeaderVerticalGridViewStyle</item>
        <item name="browsePaddingStart">@dimen/browsePaddingStart</item>
        <item name="headerIconRowWidth">@dimen/headerIconRowWidth</item>
    </style>

    <style name="HeaderIconsTheme" parent="Theme.LbryTv">
        <item name="browsePaddingStart">@dimen/headerIconBrowsePaddingStart</item>
        <item name="rowsVerticalGridStyle">?attr/headersVerticalGridStyle</item>
    </style>

    <style name="Theme.LbryTv.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splashScreenBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.LbryTv</item>
    </style>
</resources>
